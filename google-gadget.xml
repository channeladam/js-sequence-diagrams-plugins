<Module>

<ModulePrefs title="js-sequence-diagrams Gadget"
    title_url="https://raw.githubusercontent.com/channeladam/js-sequence-diagrams-plugins/master/google-gadget.xml" 
    height="200" 
    author="Adam Craven" 
    author_email="adam@channeladam.com">
  <Require feature="setprefs"/>
  <Require feature="dynamic-height"/>
  <Locale lang="en" country="au" />
</ModulePrefs>

<UserPref name="sequenceText" display_name="Sequence Diagram Text" datatype="hidden" />

<Content type="html" view="configuration" preferred_height="300">
<![CDATA[
    <span>Sequence Text: </span>
    <textarea id="sequenceText" rows="10" cols="100" onchange="Update()">
        A->B: Message
    </textarea>

    <script>
    var prefs = new gadgets.Prefs();
    function Update() {
        prefs.set("sequenceText", document.getElementById('sequenceText').value);    
    }
    </script>
]]>    
</Content>

<Content type="html">
<![CDATA[
    <script src="https://bramp.github.io/js-sequence-diagrams/js/raphael-min.js"></script>
    <script src="https://bramp.github.io/js-sequence-diagrams/js/underscore-min.js"></script>
    <script src="https://bramp.github.io/js-sequence-diagrams/js/sequence-diagram-min.js"></script>
    
    <div id="diagram"></div>
    
    <script>
      var prefs = new gadgets.Prefs();
      var sequenceText = gadgets.util.unescapeString(prefs.getString("sequenceText")); 
      var diagram = Diagram.parse(sequenceText);
      diagram.drawSVG("diagram", {theme: 'hand'});
    </script>
]]>
</Content>

</Module>
